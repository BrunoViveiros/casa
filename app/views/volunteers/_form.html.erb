<%= form_for @volunteer, url: volunteers_path, id: :new_user do |form| %>
  <%= render "/shared/error_messages", resource: volunteer %>

  <div class="field form-group">
    <%= form.label :email, t("common.email") %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :display_name, t("common.display_name") %>
    <%= form.text_field :display_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.fields_for :address do |add| %>
      <div class="street-grid">
        <div>
          <%= add.label :street_address %>
        </div>
        <div>
          <%= add.label :unit %>
        </div>
      </div>
      <div class="street-grid">
        <%= add.text_field :street_address, class: "form-group form-control" %>
        <%= add.text_field :unit, class: "form-group form-control", size: "10" %>
      </div>
      <div class="city-st-zip-grid">
        <%= add.label :city %>
        <%= add.label :state %>
        <%= add.label :zip %>
      </div>
      <div class="city-st-zip-grid">
        <%= add.text_field :city, class: "form-group form-control" %>
        <%= add.text_field :state, class: "form-group form-control" %>
        <%= add.text_field :zip, class: "form-group form-control" %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Create User", class: "btn btn-primary" %>
  </div>
<% end %>
