<%= form_for @volunteer, url: volunteers_path, id: :new_user do |form| %>
  <%= render "/shared/error_messages", resource: volunteer %>

  <div class="field form-group">
    <%= form.label :email, t("common.email") %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :display_name, t("common.display_name") %>
    <%= form.text_field :display_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= fields_for (:address) do |add| %>
      <%= add.hidden_field :id, { :value => form.index }%>
      <%= add.hidden_field :user_id, { :value => @volunteer.id }%>
      <%= add.label :street_address %>
      <%= add.text_field :street_address %>
      <%= add.label :unit %>
      <%= add.text_field :unit %>
      <%= add.label :city %>
      <%= add.text_field :city %>
      <%= add.label :state %>
      <%= add.text_field :state %>
      <%= add.label :zip %>
      <%= add.text_field :zip %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Create User", class: "btn btn-primary" %>
  </div>
<% end %>
